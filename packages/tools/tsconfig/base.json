{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "types": ["jest", "node", "@testing-library/jest-dom", "@types/jest-axe"]
  },
  "include": ["../../**/*"],
  "exclude": ["**/node_modules", "**/dist", "**/turbo"]
}
