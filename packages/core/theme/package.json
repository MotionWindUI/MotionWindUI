{
  "name": "@motionwindui/theme",
  "version": "1.0.0",
  "description": "The theme configuration / TailwindCSS plugin for MotionWindUI",
  "keywords": [
    "theme"
  ],
  "author": "Kyle Gagnon <kmgagnon99@gmail.com>",
  "license": "ISC",
  "sideEffects": false,
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/motionwindui-theme.esm.js",
      "require": "./dist/motionwindui-theme.cjs.js",
      "node": "./dist/motionwindui-theme.cjs.js",
      "default": "./dist/motionwindui-theme.esm.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MotionWindUI/MotionWindUI",
    "directory": "packages/core/theme"
  },
  "bugs": {
    "url": "https://github.com/MotionWindUI/MotionWindUI/issues"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean:build": "rm -rf dist .turbo",
    "clean:node_modules": "rm -rf node_modules",
    "clean": "pnpm clean:build && pnpm clean:node_modules",
    "typeCheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint-fix": "eslint . --fix"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@motionwindui/eslint-config": "workspace:*",
    "@motionwindui/typescript-config": "workspace:*",
    "@motionwindui/vite-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "deepmerge-ts": "^7.1.0",
    "tailwind-merge": "^2.5.2",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.11"
  }
}
